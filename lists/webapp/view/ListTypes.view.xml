<mvc:View controllerName="logaligroup.lists.controller.ListTypes" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <IconTabBar>
            <items>
                <IconTabFilter text="{i18n>objectList}">
                    <List items="{path:'/Products',filters:[{path:'Brand',operator:'EQ',value1:'Compaq'}]}">
                        <items>
                            <ObjectListItem title="{Material} {Brand} {Model}" number="{Price}" numberUnit="{Currency}" type="Detail">
                                <ObjectAttribute text="{Brand}" />
                                <ObjectAttribute text="{Weight}" />
                            </ObjectListItem>
                        </items>
                    </List>
                </IconTabFilter>
                <IconTabFilter text="{i18n>standardList}">
                    <Select selectedKey="{/typeSelection}">
                        <core:Item key="None" text="{i18n>none}"></core:Item>
                        <core:Item key="MultiSelect" text="{i18n>multiSelect}"></core:Item>
                        <core:Item key="SingleSelect" text="{i18n>singleSelect}"></core:Item>
                        <core:Item key="SingleSelectLeft" text="{i18n>singleSelectLeft}"></core:Item>
                        <core:Item key="SingleSelectMaster" text="{i18n>singleSelectMaster}"></core:Item>
                    </Select>
                    <Button text="Seleccionados" press="onShowSelectedRows" class="sapUiSmallMarginBegin"/>
                    <Button text="Eliminar" press="onDeleteSelectedRows" class="sapUiSmallMarginBegin"/>
                    <List id="standardList" items="{path:'/Products',sorter:{path:'Brand',descending: false, group: true},groupHeaderFactory:'.getGroupHeader'}" mode="{/typeSelection}">
                        <items>
                            <StandardListItem title="{Material} {Brand} {Model}" description="{Weight}" info="{Price} {Currency}" type="Active" />
                        </items>
                    </List>
                </IconTabFilter>
                <IconTabFilter text="{i18n>inputList}">
                    <List items="{/Products}" mode="Delete"  delete="onDeleteRow">
                        <items>
                            <InputListItem label="{Brand}">
                                <Select items="{Properties}">
                                    <items>
                                        <core:Item key="{Id}" text="{Text}" />
                                    </items>
                                </Select>
                            </InputListItem>
                        </items>
                    </List>
                </IconTabFilter>
                <IconTabFilter text="{i18n>notificationList}">
                    <List items="{/News}">
                        <NotificationListItem title="{Title}" description="{Description}" unread="{Unread}" authorName="{Author}" priority="{Priority}" showCloseButton="{ShowCloseButton}" />
                    </List>
                </IconTabFilter>
                <IconTabFilter text="{i18n>customList}">
                    <List items="{/News}">
                        <items>
                            <CustomListItem>
                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                    <Text text="{Title}" />
                                    <Text text="{Author}" />
                                    <Text text="{Description}" />
                                </layout:Grid>
                            </CustomListItem>
                        </items>
                    </List>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
